<Window x:Class="PediatricSoft.PlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PediatricSoft"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="PlotWindow" Height="450" Width="800">

    <Window.DataContext>
        <local:PlotWindowViewModel/>
    </Window.DataContext>

    <DockPanel>

        <StackPanel
            DockPanel.Dock="Top">

            <Button
                Margin="10,10"
                Width="60"
                Command="{Binding ButtonClearFFTCommand}"
                HorizontalAlignment="Right">
                Clear FFT
            </Button>

        </StackPanel>

        <Grid
            DockPanel.Dock="Bottom">

            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <lvc:CartesianChart
                Margin="10,10"
                Grid.Row="0"
                Grid.Column="0"
                DisableAnimations="True"
                DataTooltip="{x:Null}"
                Hoverable="False"
                Series="{Binding SeriesCollection}">

                <lvc:CartesianChart.AxisX>
                    <lvc:Axis ShowLabels="False"></lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis>
                        <lvc:Axis.Sections>
                            <lvc:AxisSection Value="0" StrokeThickness="1" Stroke="#303030"></lvc:AxisSection>
                        </lvc:Axis.Sections>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>

            <lvc:CartesianChart
                Margin="10,10"
                Grid.Row="0"
                Grid.Column="1"
                DisableAnimations="True"
                Series="{Binding SeriesCollectionFFT}">

                <lvc:CartesianChart.AxisX>
                    <lvc:Axis ShowLabels="False"></lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:LogarithmicAxis
                        LabelFormatter="{Binding Formatter}"
                        Base="{Binding Base}">
                        <lvc:LogarithmicAxis.Separator>
                            <lvc:Separator StrokeThickness="1" IsEnabled="True"></lvc:Separator>
                        </lvc:LogarithmicAxis.Separator>
                    </lvc:LogarithmicAxis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>

        </Grid>

    </DockPanel>




</Window>
