<Window x:Class="PediatricSoft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PediatricSoft"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" MinHeight="300" MinWidth="400"
        Closing="Window_Closing">

    <Grid>

        <DockPanel Width="200"
                   HorizontalAlignment="Right"
                   LastChildFill="False">

            <Button Margin="10,10,10,5"
                    Height="20"
                    DockPanel.Dock="Top"
                    IsEnabled="{Binding Path=ButtonScanPorts_IsEnabled}"
                    Click="ButtonScanPorts_Click">
                Scan Ports
            </Button>

            <StackPanel Margin="10,5"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal">

                <TextBlock VerticalAlignment="Center">
                    Debug Mode
                </TextBlock>

                <CheckBox Margin="5,0,0,0"
                          VerticalAlignment="Center"
                          DataContext="{Binding Source={StaticResource PediatricSensorDataResource}}"
                          IsChecked="{Binding Path=DebugMode}">
                </CheckBox>

            </StackPanel>

            <TextBlock Margin="10,5" Height="20"
                       DockPanel.Dock="Top"
                       DataContext="{Binding Source={StaticResource PediatricSensorDataResource}}"
                       Text="{Binding Path=SensorCount}">
            </TextBlock>

            <Button Margin="10,5"
                    Height="20"
                    DockPanel.Dock="Top"
                    IsEnabled="{Binding Path=ButtonLockSensors_IsEnabled}"
                    Click="ButtonLockSensors_Click">
                Lock Sensors
            </Button>

            <Button Margin="10,5"
                    Height="20"
                    DockPanel.Dock="Top"
                    IsEnabled="{Binding Path=ButtonRunSensors_IsEnabled}"
                    Content="{Binding Path=ButtonRunSensors_Content}"
                    Click="ButtonRunSensors_Click">
            </Button>

            <Button Margin="10,5"
                    Height="20"
                    DockPanel.Dock="Top"
                    IsEnabled="{Binding Path=ButtonSendCommands_IsEnabled}"
                    Click="ButtonSendCommands_Click">
                Send Commands
            </Button>

            <Button Margin="10,5"
                    Height="20"
                    DockPanel.Dock="Top"
                    IsEnabled="{Binding Path=ButtonPlot_IsEnabled}"
                    Content="{Binding Path=ButtonPlot_Content}"
                    Click="ButtonPlot_Click">
            </Button>

            <CheckBox Margin="10,5"
                      DockPanel.Dock="Top"
                      IsEnabled="{Binding Path=SaveDataCheckbox_IsEnabled}"
                      IsChecked="{Binding Path=SaveRAWValuesCheckbox_IsChecked}">
                Save Data
            </CheckBox>

            <CheckBox Margin="30,5"
                      DockPanel.Dock="Top"
                      IsEnabled="{Binding Path=SaveRAWValuesCheckbox_IsEnabled}"
                      IsChecked="{Binding Path=SaveRAWValuesCheckbox_IsChecked}">
                RAW Data
            </CheckBox>

            <TextBlock Margin="30,5"
                       DockPanel.Dock="Top">
                       Optional Suffix:
            </TextBlock>

            <TextBox Margin="30,5,10,5"
                     DockPanel.Dock="Top"
                     IsEnabled="{Binding Path=SaveSuffixTextBox_IsEnabled}"
                     Text="{Binding Path=SaveSuffixTextBox_Text}">
            </TextBox>

            <Button Margin="10,5"
                    Height="20"
                    DockPanel.Dock="Top"
                    IsEnabled="{Binding Path=ButtonZeroFields_IsEnabled}"
                    Click="ButtonZeroFields_Click">
                Zero Fields
            </Button>

        </DockPanel>

        <TextBox Margin="10" Height="96"
                         VerticalAlignment="Bottom" IsReadOnly="True"/>

        <ListView Margin="10,10,200,120"
                  DataContext="{Binding Source={StaticResource PediatricSensorDataResource}}"
                  ItemsSource="{Binding Path=Sensors}">

            <ListView.View>

                <GridView>

                    <GridViewColumn Header="Port" DisplayMemberBinding="{Binding Port}"/>
                    
                    <GridViewColumn Header="IDN" DisplayMemberBinding="{Binding IDN}"/>
                    
                    <GridViewColumn Header="S/N" DisplayMemberBinding="{Binding SN}"/>

                    <GridViewColumn Header="State" DisplayMemberBinding="{Binding State}"/>

                    <GridViewColumn Header="Value RAW" DisplayMemberBinding="{Binding LastValue}"/>

                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Voltage}"/>

                    <GridViewColumn Header="Plot">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding ShouldBePlotted}"
                                          ToggleButton.Checked="PlotToggle"
                                          ToggleButton.Unchecked="PlotToggle">
                                </CheckBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                </GridView>
                
            </ListView.View>

        </ListView>

    </Grid>

</Window>
